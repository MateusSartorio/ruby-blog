<% unless comment.archived? %>
  <p class="comment">
    <strong><%= comment.commenter %></strong><br>
    <%= comment.body %><br>
    <%= link_to "Delete Comment", [comment.article, comment], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
  </p>
<% end %>